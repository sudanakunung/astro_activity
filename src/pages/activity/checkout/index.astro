---
// filepath: d:\sudana\activity\src\pages\activity\checkout\index.astro
import Layout from '../../../layouts/Layout.astro';
import "../../../styles/global.css";
---

<Layout>
  <div class="checkout-container">
    <h1 class="checkout-title">Checkout</h1>
    <div class="checkout-grid">
      <!-- Left: Contact Form -->
      <form class="checkout-form" id="checkoutForm">
        <h2 class="form-title">Let us know who you are</h2>
        <div class="">
          <div class="row-two">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input type="text" id="firstName" name="firstName" required placeholder="Ali" />
            </div>

            <div class="form-group">
              <label for="lastName">Last name</label>
              <input type="text" id="lastName" name="lastName" required placeholder="TUFAN" />
            </div>
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required placeholder="creativelayers088@gmail.com" />
            <small class="form-hint">Please provide a valid email to receive your e-ticket.</small>
          </div>

          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" required placeholder="+90 (254) 458 96 32" />
          </div>

          <div class="form-group full">
            <label for="special">Special Requirements</label>
            <textarea id="special" name="special" rows="4" placeholder="Special Requirements"></textarea>
          </div>
        </div>

        <div class="form-group terms-group">
          <input type="checkbox" id="terms" name="terms" required />
          <label for="terms">
            By making this purchase, I confirm that I have read, understood, and agree to the
            <a href="#" target="_blank" class="terms-link">Terms & Conditions</a>.
          </label>
        </div>      
      </form>
      <!-- Right: Cart -->
      <aside class="checkout-cart">
        <h2 class="cart-title">My Cart (1)</h2>
        <div class="cart-item">
          <div class="cart-item-title">Jawa Timur Park 1</div>
          <div class="cart-item-desc">Jatim Park 1 + Museum Tubuh + Museum Angkut Weekend (Per Pax)</div>
          <div class="cart-item-detail">1 X Per Pax</div>
          <div class="cart-item-date">31 Oct 2025, 08.30â€“16.30</div>
        </div>
        <div class="cart-promo">
          <label for="promo">Enter Promo Code</label>
          <div class="promo-row">
            <input type="text" id="promo" name="promo" placeholder="Promo Code" />
            <button type="button" class="btn-promo">Apply</button>
          </div>
        </div>
        <div class="cart-total-row">
          <span class="cart-total-label">Total</span>
          <span class="cart-total-value">IDR 200,000</span>
        </div>
        <div class="cart-actions">
          <button type="button" class="btn-back">Back</button>
          <button type="submit" form="checkoutForm" class="btn-pay">Proceed to Payment</button>
        </div>
      </aside>
    </div>
  </div>
</Layout>

<style>
.checkout-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 24px 8px;
}
.checkout-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 24px;
  color: #0f172a;
}
.checkout-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr)); /* two equal-width columns */
  gap: 32px;
  align-items: stretch;
  grid-auto-rows: 1fr; /* ensure both columns stretch to same height */
}
.checkout-form,
.checkout-cart {
  background: #fff;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 32px 24px;
  min-width: 0;
  box-shadow: 0 2px 8px rgba(15,23,42,0.04);
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  height: 100%;
}
.form-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 18px;
  color: #0f172a;
}
.form-group {
  margin-bottom: 18px;
  display: flex;
  flex-direction: column;
}
.form-group label {
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 6px;
  color: #374151;
}
.form-group input[type="email"],
.form-group input[type="text"],
.form-group input[type="tel"] {
  padding: 10px 12px;
  border: 1.5px solid #e5e7eb;
  border-radius: 6px;
  font-size: 15px;
  background: #fff;
  color: #0f172a;
  transition: border-color 0.2s;
}
.form-group input:focus {
  border-color: #0f172a;
  outline: none;
}
.form-hint {
  font-size: 12px;
  color: #6b7280;
  margin-top: 4px;
}
/* two-column form grid */
.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px 20px;
}
.row-two {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}
.form-group.full {
  grid-column: 1 / -1;
}
.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  margin-top: 8px;
}

select,
textarea {
  padding: 10px 12px;
  border: 1.5px solid #e5e7eb;
  border-radius: 6px;
  font-size: 15px;
  background: #fff;
  color: #0f172a;
  transition: border-color 0.2s;
}
.form-group textarea { resize: vertical; }
.phone-group .phone-input {
  display: flex;
  align-items: center;
  gap: 8px;
}
.country-code {
  background: #f3f4f6;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  padding: 8px 10px;
  font-size: 14px;
  color: #374151;
}
.terms-group {
  flex-direction: row;
  align-items: center;
  gap: 8px;
  font-size: 13px;
}
.terms-link {
  color: #0f172a;
  text-decoration: underline;
  margin-left: 2px;
}
.checkout-cart {
  max-width: 100%;
}
.cart-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 12px;
  color: #0f172a;
}
.cart-item {
  border-bottom: 1px solid #e5e7eb;
  padding-bottom: 12px;
  margin-bottom: 12px;
}
.cart-item-title {
  font-weight: 700;
  font-size: 15px;
  color: #0f172a;
}
.cart-item-desc {
  font-size: 13px;
  color: #374151;
  margin: 2px 0 4px 0;
}
.cart-item-detail,
.cart-item-date {
  font-size: 13px;
  color: #6b7280;
}
.cart-promo label {
  font-size: 13px;
  color: #374151;
  margin-bottom: 4px;
  display: block;
}
.promo-row {
  display: flex;
  gap: 8px;
  margin-top: 4px;
}
.promo-row input {
  flex: 1;
  padding: 8px 10px;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  font-size: 14px;
}
.btn-promo {
  background: #fff;
  color: #0f172a;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  padding: 8px 16px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
}
.btn-promo:hover {
  background: #f3f4f6;
  border-color: #0f172a;
}
.cart-total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  font-weight: 600;
  margin: 12px 0;
}
.cart-total-label {
  color: #374151;
}
.cart-total-value {
  color: #0f172a;
}
.cart-actions {
  display: flex;
  gap: 12px;
  margin-top: 16px;
}
.btn-back {
  background: #fff;
  color: #0f172a;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  padding: 10px 18px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
}
.btn-back:hover {
  background: #f3f4f6;
  border-color: #0f172a;
}
.btn-pay {
  background: #0f172a;
  color: #fff;
  border: none;
  border-radius: 6px;
  padding: 10px 18px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s;
}
.btn-pay:hover {
  background: #1f2937;
}
@media (max-width: 900px) {
  .checkout-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  .checkout-cart {
    max-width: 100%;
    min-width: 0;
  }
  .form-grid {
    grid-template-columns: 1fr;
  }
  .row-two {
    grid-template-columns: 1fr;
  }
}
</style>