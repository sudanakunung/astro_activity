    }

    .activity-title {
      font-size: 18px;
    }

    .calendar-grid {
      gap: 6px;
    }

    .calendar-day {
      font-size: 12px;
    }

    .stepper {
      gap: 8px;
      margin: 24px 0;
    }

    .step-number {
      width: 32px;
      height: 32px;
      font-size: 12px;
    }

    .step-label {
      font-size: 11px;
    }

    .step-line {
      width: 20px;
    }

    .timeslots-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .step-actions {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
    }
  }
