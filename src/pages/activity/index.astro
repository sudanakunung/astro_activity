  }

  .btn-primary:disabled {
    background: #e5e7eb;
    cursor: not-allowed;
  }

  .btn-secondary {
    background: #fff;
    color: #0f172a;
    border: 1px solid #e5e7eb;
  }

  .btn-secondary:hover:not(:disabled) {
