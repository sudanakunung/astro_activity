<Layout>
  <div class="activity-container" x-data="bookingFormData()" x-init="">
    <!-- Header -->
    <div class="activity-header">
      <h1 class="activity-title">Jatim Park 1 + Museum Tubuh + Museum Angkut Weekday</h1>
      <p class="activity-price">Dari <span class="price-value">IDR 180.000</span></p>
      <button class="btn-booking">Booking</button>
    </div>

    <!-- Stepper -->
    <div class="stepper">
      <div class="step active" data-step="1">
        <div class="step-number">1</div>
        <div class="step-label">Date time</div>
      </div>
      <div class="step-line"></div>
      <div class="step" data-step="2">
        <div class="step-number">2</div>
        <div class="step-label">Menu</div>
      </div>
      <div class="step-line"></div>
      <div class="step" data-step="3">
        <div class="step-number">3</div>
        <div class="step-label">Confirm</div>
      </div>
    </div>

    <div class="steps-container">
      <!-- Step 1: Detail & Termasuk -->
      <div class="step-content active" id="step-1">
        <aside class="sidebar">
          <div class="sidebar-section">
             <div id="my-calendar" style="display: flex;flex-direction: row;justify-content: center;"></div>
               <div class="timeslots-grid" id="timeslots-grid">
                <template x-for="time in time_list" :key="time">
                  <button class="timeslot-btn" @click="selectedTime = time; document.getElementById('selected-time').textContent = `Waktu: ${time}`">
                    <span class="timeslot-label"></span>
                  </button>
                </template>
          </div>
          </div>
        </aside>

        <div class="step-actions">
          <button class="btn-secondary" disabled>Sebelumnya</button>
          <button class="btn-primary next-step">Selanjutnya</button>
        </div>
      </div>

      <!-- Step 2: Calendar -->
      <div class="step-content flex justify-center" id="step-2">
        <!-- buat pilihan menu dengan checkbox -->
        <div class="menu-options">
          <h2 class="menu-title">Pilih Menu Tambahan</h2>
          <div class="flex flex-col space-y-2">
            <label class="menu-item">
              <input type="radio" name="menu-option" class="menu-radio" value="meal" />
              <span class="menu-label">Paket Makan Siang (+IDR 50,000)</span>
            </label>
            <label class="menu-item">
              <input type="radio" name="menu-option" class="menu-radio" value="guide" />
              <span class="menu-label">Pemandu Wisata (+IDR 75,000)</span>
            </label>
            <label class="menu-item">
              <input type="radio" name="menu-option" class="menu-radio" value="transport" />
              <span class="menu-label">Transportasi Antar Jemput (+IDR 100,000)</span>
            </label>
          </div>
        </div>



        <div class="step-actions">
          <button class="btn-secondary prev-step">Sebelumnya</button>
            <button class="btn-primary next-step">Selanjutnya</button>
        </div>
      </div>

      <!-- Step 3: Time Slot -->
      <div class="step-content" id="step-3">
        <section class="timeslot-section">
          <h2 class="timeslot-title">Pilih Slot Waktu</h2>
          <p class="timeslot-desc" id="selected-date">Tanggal: -</p>

          <p class="timeslot-info" id="selected-time">Waktu: -</p>
        </section>

        <div class="step-actions">
          <button class="btn-secondary prev-step">Sebelumnya</button>
          <!-- <button class="btn-primary" id="btn-confirm" disabled>Konfirmasi Booking</button> -->
        </div>
      </div>

      <!-- Step 4: Pax Selection -->
      <div class="step-content" id="step-4">
        <section class="pax-section">
          <h2 class="pax-title">Pilih Jumlah Pengunjung</h2>
          <div class="pax-grid">
            <button class="pax-btn" data-pax="1">1</button>
            <button class="pax-btn" data-pax="2">2</button>
            <button class="pax-btn" data-pax="3">3</button>
            <button class="pax-btn" data-pax="4">4</button>
          </div>
          <!-- <div class="pax-manual">
            <label for="pax-manual-input" class="pax-manual-label">Atau input manual:</label>
            <input type="number" min="1" max="99" id="pax-manual-input" class="pax-manual-input" placeholder="Jumlah lain..." />
          </div> -->
          <p class="pax-info" id="selected-pax">Jumlah: -</p>
        </section>
        <div class="step-actions">
          <button class="btn-secondary prev-step">Sebelumnya</button>
          <button class="btn-primary" id="btn-confirm"  disabled>Konfirmasi Booking</button>
        </div>
      </div>
    </div>
  </div>
